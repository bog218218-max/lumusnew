exports.handler = async function(event, context) {
  // –ü—Ä–æ–≤–µ—Ä–∫–∞ –º–µ—Ç–æ–¥–∞
  if (event.httpMethod !== "POST") {
    return { statusCode: 405, body: "Method Not Allowed" };
  }

  try {
    const data = JSON.parse(event.body);
    const { name, phone, details } = data;

    // –í–∞—à–∏ —Ç–æ–∫–µ–Ω—ã –∏–∑ –Ω–∞—Å—Ç—Ä–æ–µ–∫ Netlify
    const TG_TOKEN = process.env.TG_TOKEN;
    const TG_CHAT_ID = process.env.TG_CHAT_ID;

    if (!TG_TOKEN || !TG_CHAT_ID) {
      throw new Error("Tokens not set");
    }

    const message = `
üöÄ –ù–û–í–ê–Ø –ó–ê–Ø–í–ö–ê!
üë§ –ò–º—è: ${name}
üì± –¢–µ–ª–µ—Ñ–æ–Ω: ${phone}
üìù –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π: ${details || '–ù–µ—Ç'}
`;

    // –û—Ç–ø—Ä–∞–≤–∫–∞ —á–µ—Ä–µ–∑ –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã–π fetch (–±–µ–∑ axios)
    const response = await fetch(`https://api.telegram.org/bot${TG_TOKEN}/sendMessage`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        chat_id: TG_CHAT_ID,
        text: message,
        parse_mode: 'HTML'
      })
    });

    if (!response.ok) {
      throw new Error(`Telegram API Error: ${response.statusText}`);
    }

    return {
      statusCode: 200,
      body: JSON.stringify({ message: "–£—Å–ø–µ—à–Ω–æ!" })
    };

  } catch (error) {
    console.error("Error:", error);
    return {
      statusCode: 500,
      body: JSON.stringify({ error: "–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏" })
    };
  }
};
